{
    "/shoes": {
        "post": {
            "parameters": [{
                "name": "shoe",
                "in": "body",
                "schema": { "$ref": "definitions.json#/post_shoe" },
                "example": {
                    "size": 36,
                    "color": "red"
                }
            }],
            "controllerId": "store.shoes_controller",
            "operationId": "post_shoe",
            "responses": {
                "201": {
                    "description": "Created"
                }
            }
        }
    },
    "/shoes/{id}": {
        "get": {
            "parameters": [{
                "name": "id",
                "in": "path",
                "type": "integer",
                "required": true,
                "examples": {
                    "id1": 1,
                    "id2": 2
                }
            },{
                "name": "color",
                "in": "header",
                "type": "object",
                "schema": {
                    "required": ["name"],
                    "properties": {
                        "name": {"type": "string"}
                    }
                },
                "examples": { "$ref": "../definitions.json#/colorsExample" }
            },{
                "name": "brand",
                "in": "query",
                "type": "string"
            }],
            "controllerId": "store.shoes_controller",
            "operationId": "post_shoe",
            "responses": {
                "201": {
                    "description": "Created",
                    "schema": {"$ref": "definitions.json#/get_shoe"}
                }
            }
        }
    }
}